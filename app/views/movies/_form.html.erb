<% if @movie.errors.any? %>
<ul>
  <% @movie.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @movie do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :actor %>(Durch " , " getrennt)<br>
    <%= f.text_field :actor %>
  </p>
  <p>
    <%= f.label :m_genre %>(Hauptgenre)<br>
    <%= f.text_field :m_genre %>
  </p>
  <p>
    <%= f.label :genre %>(Alle Genre die auf den Film zutreffen durch " , " getrennt)<br>
    <%= f.text_field :genre %>
  </p>
  <p>
    <%= f.label :avatar %>
    <%= image_tag(@movie.avatar_url) if @movie.avatar? %>
    <%= f.text_field :remote_avatar_url %>
  </p>
  <p>
    <%= f.submit %> oder <button type="reset" value="reset">Reset</button>
  </p>
<% end %>