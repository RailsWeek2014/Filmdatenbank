<div class="row" style='margin-bottom:8px'>
  <div class="col-md-12">
    <%= search_form_for @q, class: "form-inline" do |f| %>
      <div class="form-group"> 
        <%= f.submit value: "Suchen", :class => "btn btn-primary"%>
      </div>

      <div class="form-group">
        <%= f.search_field :title_cont, class: "form-control", placeholder: "Titel" %>
      </div>
  
      <div class="form-group"> 
        <%= f.search_field :year_cont, class: "form-control", placeholder: "Jahr" %>
      </div>
  
      <div class="form-group"> 
        <%= f.search_field :genre_cont, class: "form-control", placeholder: "Genre" %>
      </div>
    <% end %>
  </div>
</div>